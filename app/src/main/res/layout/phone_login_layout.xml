<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hui"
    android:orientation="vertical">
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white">
        
        <EditText
        android:id="@+id/phone_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/hint_phone_input"
        android:inputType="phone"
        android:maxLength="11"
        android:maxLines="1"
        android:textColor="@color/text_color_light_black"
        android:textColorHint="@color/text_color_gray"
        android:textSize="13sp" />
        
        <ImageView
        android:id="@+id/iv_phone_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:scaleType="center"
        android:src="@mipmap/delete_button"
        android:visibility="invisible" />
        
    </RelativeLayout>
    
    <View
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_marginLeft="14dp"
    android:background="@color/stroke_color_light_white" />
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color_white"
        android:orientation="horizontal">
        
        
        <TextView
        android:id="@+id/get_verify_code"
        android:layout_width="75dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="14dp"
        android:background="@drawable/custom_btn_bg_enabled_blue"
        android:gravity="center"
        android:text="@string/get_verify_code"
        android:textColor="@color/text_color_white"
        android:textSize="12sp" />
        
        <ImageView
        android:id="@+id/iv_verify_code_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/get_verify_code"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:scaleType="center"
        android:src="@mipmap/delete_button"
        android:visibility="invisible" />
        
        <EditText
        android:id="@+id/verify_code_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="50dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:hint="@string/hint_verify_code_input"
        android:inputType="number"
        android:maxLines="1"
        android:textColor="@color/text_color_light_black"
        android:textColorHint="@color/text_color_gray"
        android:textSize="13sp" />
        
    </RelativeLayout>
    
    
    <TextView
    android:id="@+id/phone_login"
    style="@style/CustomNormalButtonStyle"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="34dp"
    android:text="登录" />
    
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <top.ftas.ftaswidget.view.UnderlineTextView
        android:id="@+id/pwd_free_into"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:paddingTop="16dp"
        app:default_color="@color/darkgray"
        app:pressed_color="@color/colorStlSelectedTitle"
        app:text="@string/free_into"
        app:textsize="12"
        app:underline_height="1dp" />
        
        
        <top.ftas.ftaswidget.view.UnderlineTextView
        android:id="@+id/pwd_forget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:paddingTop="16dp"
        app:default_color="@color/darkgray"
        app:pressed_color="@color/colorStlSelectedTitle"
        app:text="@string/forgot_pwd"
        app:textsize="12"
        app:underline_height="1dp" />
        
    </RelativeLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:gravity="center_vertical|left"
            android:orientation="horizontal"
            android:paddingLeft="32dp"
            android:paddingRight="32dp">
            
            <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#e3e9ed" />
            
            <TextView
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="第三方登录"
            android:textColor="#a5a5a5"
            android:textSize="14sp" />
            
            <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1"
            android:background="#e3e9ed" />
        </LinearLayout>
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="44dp"
            android:orientation="horizontal">
            
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                <ImageView
                android:id="@+id/iv_wechat_login"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginRight="21.5dp"
                android:src="@mipmap/weixin_denglu" />
                
                
            </RelativeLayout>
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                
                
                <ImageView
                android:id="@+id/iv_alipay_login"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginLeft="21.5dp"
                android:src="@mipmap/zhifubao_denglu" />
                
            </RelativeLayout>
        </LinearLayout>
        
    </LinearLayout>
    
    
</LinearLayout>
