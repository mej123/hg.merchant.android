<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/kk_common_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品编辑"
            android:textColor="#1f2427"
            android:textSize="@dimen/size_18" />

        <TextView
            android:id="@+id/tv_goods_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="商品编辑"
            android:textColor="#24292e"
            android:textSize="@dimen/size_15" />


    </RelativeLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:text="商品图片"
                android:textColor="#7f8a95"
                android:textSize="@dimen/size_15" />


            <RelativeLayout
                android:layout_width="333dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:background="#d3d5d9">


                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:src="@mipmap/default_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="点击该区域上传图片"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/size_13" />


            </RelativeLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:text="商品介绍"
                android:textColor="#7f8a95"
                android:textSize="@dimen/size_15" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp">


                <TextView
                    android:id="@+id/tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="名称"
                    android:textColor="#1f2427" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_1"
                    android:text="(必填)"
                    android:textColor="#ff3b30" />

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="热菜"
                    android:singleLine="true"
                    android:textColor="#1f2427"
                    android:textColorHint="#a1a1a5"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="原价"
                    android:textColor="#1f2427" />

                <EditText
                    android:id="@+id/et_old_price"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="8"
                    android:singleLine="true"
                    android:textColor="#1f2427"
                    android:textColorHint="#a1a1a5"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp">


                <TextView
                    android:id="@+id/tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="售价"
                    android:textColor="#1f2427" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_2"
                    android:text="(必填)"
                    android:textColor="#ff3b30" />

                <EditText
                    android:id="@+id/et_now_price"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="right|center_vertical"
                    android:hint="15"
                    android:singleLine="true"
                    android:textColor="#1f2427"
                    android:textColorHint="#a1a1a5"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="单位"
                    android:textColor="#1f2427" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_3"
                    android:text="(必填)"
                    android:textColor="#ff3b30" />

                <EditText
                    android:id="@+id/et_counts"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="份"
                    android:singleLine="true"
                    android:textColor="#1f2427"
                    android:textColorHint="#a1a1a5"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="分类"
                    android:textColor="#1f2427" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_4"
                    android:text="(必填)"
                    android:textColor="#ff3b30" />


                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/arrow_right" />

                <TextView

                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11dp"
                    android:layout_toLeftOf="@+id/iv_1"
                    android:gravity="right|center_vertical"
                    android:text="热菜"
                    android:textColor="#1f2427"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品组合"
                    android:textColor="#1f2427" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/tv_5"
                    android:text="(必填)"
                    android:textColor="#ff3b30" />


                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/arrow_right" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="11dp"
                    android:layout_toLeftOf="@+id/iv_2"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:text="2件"
                    android:textColor="#1f2427"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品限量"
                    android:textColor="#1f2427" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="份"
                    android:singleLine="true"
                    android:textColor="#1f2427"
                    android:textColorHint="#a1a1a5"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品口味"
                    android:textColor="#1f2427" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请编辑商品口味"
                    android:singleLine="true"
                    android:textColor="#1f2427"
                    android:textColorHint="#a1a1a5"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="商品折扣"
                    android:textColor="#1f2427" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@null"
                    android:gravity="right|center_vertical"
                    android:hint="请填写折扣数额  例：七折"
                    android:singleLine="true"
                    android:textColor="#1f2427"
                    android:textColorHint="#a1a1a5"
                    android:textSize="@dimen/size_12" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否参与全店折扣"
                    android:textColor="#1f2427" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/switch_on" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="14dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="是否属于推荐商品"
                    android:textColor="#1f2427" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/switch_off" />

                <View
                    style="@style/line"
                    android:layout_alignParentBottom="true" />

            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="73dp" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>

