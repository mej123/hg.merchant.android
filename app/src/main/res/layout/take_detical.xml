<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/custom_tool_bar" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_while"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="已下订单" />

            <View
                android:layout_width="match_parent"
                style="@style/line" />


            <com.kuku.kkmerchant.recycleviewdelteitem.ItemRemoveRecyclerView
                android:id="@+id/id_item_remove_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_while"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="备注：不要辣" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_while"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="追加订单(1次)" />


            <com.kuku.kkmerchant.view.PullToRefreshRecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            </com.kuku.kkmerchant.view.PullToRefreshRecyclerView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@color/bg_while"
                android:gravity="center_vertical"
                android:paddingLeft="15dp"
                android:text="备注：不要辣" />

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/tijiao_layout"
        android:layout_width="fill_parent"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/personlinfo_sure_bg_">

        <TextView
            android:id="@+id/tijiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="结算翻台"
            android:textColor="#404040"
            android:textSize="15dp"

            />

    </RelativeLayout>


</RelativeLayout>

