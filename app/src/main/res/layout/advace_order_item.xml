<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_advace_order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_while">


        <LinearLayout
            android:id="@+id/ll_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="马云"
                    android:textColor="#1f2427"
                    android:textSize="@dimen/size_14" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv_name"
                    android:paddingLeft="15dp"
                    android:text="151365478911"
                    android:textColor="#1f2427"
                    android:textSize="@dimen/size_14" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp">

                <TextView
                    android:id="@+id/tv_eat_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="用餐时间"
                    android:textColor="#7f8a95"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_eat_time"
                    android:text="2017-9.13  16:24"
                    android:textColor="#7f8a95"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp">

                <TextView
                    android:id="@+id/tv_eat_Person_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="用餐人数"
                    android:textColor="#7f8a95"
                    android:textSize="@dimen/size_14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_toRightOf="@+id/tv_eat_Person_count"
                    android:text="6 | 需要包厢"
                    android:textColor="#7f8a95"
                    android:textSize="@dimen/size_14" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/btg_icon_arrow_right_normal"

            />

        <View
            style="@style/line"
            android:layout_below="@+id/ll_layout"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="14dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="@color/bg_while">

        <TextView
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/tv_receive"
            android:background="@drawable/custom_btn_bg_enabled_hui1"
            android:gravity="center"
            android:text="拒绝"
            android:textSize="@dimen/size_13" />

        <TextView
            android:id="@+id/tv_receive"
            android:layout_width="80dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/custom_btn_bg_enabled_hui2"
            android:gravity="center"
            android:text="接受"
            android:textColor="#ffffff"
            android:textSize="@dimen/size_13" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/bg_hui" />
    Z
</LinearLayout>
