<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <top.ftas.ftaswidget.springview.SpringView
        android:id="@+id/operating_record_springview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/operating_record_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </top.ftas.ftaswidget.springview.SpringView>

    <LinearLayout
        android:id="@+id/operating_record_empty_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="170dp"
            android:layout_height="136dp"
            android:layout_marginTop="164dp"
            android:src="@drawable/my_account_no_data_bg_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="36dp"
            android:text="@string/new_no_operating_record"
            android:textColor="@color/stroke_color_light_coffee"
            android:textSize="13sp" />
    </LinearLayout>


</LinearLayout>
