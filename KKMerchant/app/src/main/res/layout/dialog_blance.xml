<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/operate_clean"
        android:layout_width="134dp"
        android:layout_height="61dp"
        android:background="@drawable/order_ticket_bg_selector"
        android:gravity="center"
        android:text="清台"
        android:textColor="@color/order_operation_select_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/operate_blance"
        android:layout_width="134dp"
        android:layout_height="61dp"
        android:background="@drawable/order_ticket_bg_selector"
        android:gravity="center"
        android:text="结算"
        android:textColor="@color/order_operation_select_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/operate_blance_clean"
        android:layout_width="134dp"
        android:layout_height="61dp"
        android:background="@drawable/order_ticket_bg_selector"
        android:gravity="center"
        android:text="结算并清台"
        android:textColor="@color/order_operation_select_color"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/operation_cancel_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="87dp"
        android:src="@mipmap/cancel_icon" />

</LinearLayout>