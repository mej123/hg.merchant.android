<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/edit_price_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dish_name"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:gravity="center_horizontal"
        android:textColor="@color/text_color_light_black"
        android:textSize="17sp" />

    <RelativeLayout
        android:id="@+id/dish_price_edit_layout"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:text="现总价:"
            android:textColor="@color/text_color_blue_4"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/dish_price_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@null"
            android:inputType="number|numberDecimal"
            android:textColor="@color/text_color_blue_4"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:id="@+id/divder"
        android:layout_width="204dp"
        android:layout_height="1px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:background="@color/text_color_blue_4" />


    <RelativeLayout
        android:id="@+id/dish_origin_price_layout"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/dish_origin_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:text="原总价:"
            android:textColor="@color/text_color_medium_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dish_origin_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dish_origin_price_title"
            android:textColor="@color/text_color_medium_gray"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dish_single_price_layout"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/dish_single_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:text="菜品单价:"
            android:textColor="@color/text_color_medium_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dish_single_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dish_single_price_title"
            android:text="10.00"
            android:textColor="@color/text_color_medium_gray"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/dish_number_layout"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/dish_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="39dp"
            android:text="菜品数量:"
            android:textColor="@color/text_color_medium_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dish_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/dish_number_title"
            android:textColor="@color/text_color_medium_gray"
            android:textSize="13sp" />
    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="49dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/text_color_black_1"
            android:textSize="16sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:background="@color/app_divder_color" />

        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/text_color_black_1"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
