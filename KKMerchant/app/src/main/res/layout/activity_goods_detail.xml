<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/unselected_tab_color">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/goods_detail_icon" />

        <ImageView
            android:id="@+id/goods_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:background="@color/bg_color_white">

        <LinearLayout
            android:id="@+id/goods_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="21dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_light_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:textColor="@color/text_color_red"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/goods_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/goods_left"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/fire_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@mipmap/fire_icon" />

            <TextView
                android:id="@+id/tv_goods_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:textColor="@color/text_color_light_black"
                android:textSize="13sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_goods_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/goods_discount"
            android:layout_below="@id/goods_discount"
            android:layout_marginTop="11dp"
            android:textColor="@color/text_color_medium_gray"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/goods_state"
            android:layout_width="44dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            android:layout_marginTop="21dp"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:textSize="13sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/goods_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:background="@color/bg_color_white"
            android:gravity="center"
            android:text="@string/delete"
            android:textColor="@color/text_color_light_black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/goods_on"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/text_color_light_blue"
            android:gravity="center"
            android:textColor="@color/text_color_white"
            android:textSize="17sp" />

    </LinearLayout>


</LinearLayout>
