<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg_color_white"
        android:paddingLeft="14dp">

        <TextView
            android:id="@+id/table_name_title"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:text="桌台名称"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/table_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_sale_unit"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:paddingLeft="120dp"
            android:paddingRight="14dp"
            android:singleLine="true"
            android:textColor="@color/text_color_light_black"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/app_divder_color" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="@color/bg_color_white"
        android:paddingLeft="14dp">

        <TextView
            android:id="@+id/table_person_title"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:gravity="center_vertical"
            android:text="适合用餐人数"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/table_person_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="14dp"
            android:text="人"
            android:textColor="@color/text_color_light_black" />

        <EditText
            android:id="@+id/table_person_count"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/table_person_unit"
            android:background="@null"
            android:gravity="right|center_vertical"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/text_color_light_black"
            android:textSize="14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/edit_confirm"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_blue_shape_3"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/app_bg_color"
        android:textSize="16sp" />
</LinearLayout>