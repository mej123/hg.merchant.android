<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_order_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="14dp">


    <TextView
        android:id="@+id/goods_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:textColor="@color/text_color_light_black"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/goods_sale_price"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="7dp"
        android:gravity="right"
        android:textColor="@color/text_color_light_black"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/goods_original_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/goods_sale_price"
        android:layout_below="@id/goods_sale_price"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:textColor="@color/text_color_light_little_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/goods_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@id/goods_sale_price"
        android:gravity="right"
        android:textColor="@color/text_color_light_black"
        android:textSize="11sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/app_divder_color" />
</RelativeLayout>