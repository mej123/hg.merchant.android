<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rl_goods_list_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_while">

            <TextView
                android:id="@+id/tv_goods_list_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:paddingLeft="14dp"
                android:text="商品列表管理"
                android:textColor="@color/color02"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_goods_list_management"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="14dp"
                android:paddingRight="105dp"
                android:text="@string/goods_list_management_hint"
                android:textColor="@color/text_color_gray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/check_goods_list_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp" />

            <CheckBox
                android:id="@+id/goods_list_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/personal_bg_check_state_select_permission"
                android:button="@null"
                android:tag="goodsList" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_opening_table_management"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_while">

            <TextView
                android:id="@+id/tv_opening_table_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:paddingLeft="14dp"
                android:text="营业桌台管理"
                android:textColor="@color/color02"
                android:textSize="16sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_opening_table_management"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="4dp"
                android:paddingLeft="14dp"
                android:paddingRight="105dp"
                android:text="@string/opening_table_management_hint"
                android:textColor="@color/text_color_gray"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/check_opening_table_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp" />

            <CheckBox
                android:id="@+id/opening_table_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="14dp"
                android:background="@drawable/personal_bg_check_state_select_permission"
                android:button="@null"
                android:tag="openingTable" />

            <View
                style="@style/line"
                android:layout_marginLeft="14dp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>