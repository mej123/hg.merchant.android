<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/address_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#ffffff"
        app:tabBackground="@null"
        app:tabIndicatorColor="@null"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#1784ff"
        app:tabTextAppearance="@android:style/TextAppearance.Widget.TabWidget" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e9ed" />

    <top.ftas.ftaswidget.recyclerview.SpecifiedRecyclerView
        android:id="@+id/drop_menu_recycler_view"
        app:recycler_height="230dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_white"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#e3e9ed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="39dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/address_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="#1f2427"
            android:textSize="13sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="13dp"
            android:layout_gravity="center_vertical"
            android:background="#e3e9ed" />

        <TextView
            android:id="@+id/address_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="#1f2427"
            android:textSize="13sp" />


    </LinearLayout>
</LinearLayout>