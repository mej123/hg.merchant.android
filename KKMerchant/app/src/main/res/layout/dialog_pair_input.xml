<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_confirm_shape"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:textColor="@color/text_color_black"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/edit_text_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/dialog_table_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_light_black"
            android:textColorHint="@color/text_color_little_gray"
            android:textSize="10sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="192dp"
        android:layout_height="25dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="11dp"
        android:background="@drawable/edit_text_shape"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/dialog_table_person_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_light_black"
            android:textColorHint="@color/text_color_little_gray"
            android:textSize="10sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="11dp"
        android:background="@color/stroke_color_confirm_dialog" />

    <LinearLayout
        android:layout_width="216dp"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_color_little_blue"
            android:textSize="14sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/stroke_color_confirm_dialog" />

        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_color_little_blue"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>