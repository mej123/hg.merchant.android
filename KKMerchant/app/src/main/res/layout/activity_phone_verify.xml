<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:gravity="center_horizontal">


    <TextView
        android:id="@+id/verify_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_light_black"
        android:textSize="11sp" />

    <RelativeLayout
        android:id="@+id/verify_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/verify_hint"
        android:background="@color/bg_color_white"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/get_verify_code"
            android:layout_width="75dp"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:background="@drawable/gradient_blue_shape_1"
            android:gravity="center"
            android:text="@string/get_verify_code"
            android:textColor="@color/text_color_white"
            android:textSize="12sp" />


        <ImageView
            android:id="@+id/iv_verify_code_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/get_verify_code"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:scaleType="center"
            android:src="@mipmap/delete_button"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/verify_code_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_toLeftOf="@id/iv_verify_code_delete"
            android:background="@null"
            android:gravity="center_vertical"
            android:hint="@string/hint_verify_code_input"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/text_color_light_black"
            android:textColorHint="@color/text_color_gray"
            android:textSize="13sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/verify_login"
        android:layout_width="330dp"
        android:layout_height="44dp"
        android:layout_below="@id/verify_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:background="@drawable/gradient_blue_shape_2"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/text_color_white"
        android:textSize="16sp" />
</RelativeLayout>

