<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_append_order"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_white"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/dish_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/dish_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="@color/text_color_light_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/dish_type"
                android:layout_width="28dp"
                android:layout_height="15dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/dish_name"
                android:background="@drawable/red_rect_shape_1"
                android:gravity="center"
                android:textColor="@color/text_color_red_2"
                android:textSize="11sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/dish_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dish_name_layout"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color_gray_4"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dish_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dish_price"
            android:layout_marginTop="4dp"
            android:textColor="@color/text_color_gray_4"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/dish_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dish_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_gray_4"
            android:textSize="15sp" />

    </RelativeLayout>


    <View
        android:id="@+id/divder"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_divder_color" />
</LinearLayout>