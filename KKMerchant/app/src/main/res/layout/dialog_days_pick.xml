<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color_gray">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="@string/cancel"
            android:textColor="@color/text_color_dark_blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:text="@string/confirm"
            android:textColor="@color/text_color_dark_blue"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/text_color_black"
            android:textSize="15sp" />
    </RelativeLayout>


    <top.ftas.ftaswidget.view.WheelView
        android:id="@+id/wheel_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemNumber="3"
        app:lineColor="#e3e9ed"
        app:lineHeight="1dp"
        app:noEmpty="true"
        app:normalTextColor="#b9b9b9"
        app:normalTextSize="14sp"
        app:selectedTextColor="#333333"
        app:selectedTextSize="17sp"
        app:unitHeight="36dp" />


</LinearLayout>