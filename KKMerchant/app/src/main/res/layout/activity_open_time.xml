<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/bg_color_white">


        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:text="@string/hours_24"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />


        <ImageView
            android:id="@+id/hours_24_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="14dp"
            android:src="@drawable/checkbox_selector" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/first_duration_layout"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="11dp"
        android:background="@color/bg_color_white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:text="@string/first_duration"
            android:textColor="@color/text_color_gray"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/first_duration_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:paddingTop="15dp"
            android:src="@drawable/image_selector" />

        <TextView
            android:id="@+id/first_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:textColor="@color/bg_color_blue_6"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/second_duration_layout"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="11dp"
        android:background="@color/bg_color_white">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="15dp"
            android:text="@string/second_duration"
            android:textColor="@color/text_color_gray"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/second_duration_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingTop="15dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="14dp"
            android:src="@drawable/image_selector" />

        <TextView
            android:id="@+id/second_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:textColor="@color/bg_color_blue_6"
            android:textSize="23sp"
            android:textStyle="bold" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


    <TextView
        android:id="@+id/confirm_open_time"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_blue_shape_3"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/text_color_white"
        android:textSize="16sp" />

</LinearLayout>
