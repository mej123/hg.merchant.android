<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color_white">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="14dp"
        android:background="@color/app_divder_color" />

    <ImageView
        android:id="@+id/store_order_avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        android:scaleType="centerCrop" />


    <TextView
        android:id="@+id/customer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_light_black"
        android:textSize="15sp"
        android:textStyle="bold" />


    <RelativeLayout
        android:id="@+id/store_order_num_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/customer_name"
        android:layout_marginBottom="3dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/store_order_num_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="72dp"
            android:gravity="center_vertical"
            android:text="@string/table_num"
            android:textColor="@color/text_color_little_black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/store_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/store_order_num_title"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/store_order_num_title"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_little_black"
            android:textSize="13sp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/store_order_exchange_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_order_num_layout"
        android:layout_marginLeft="72dp"
        android:gravity="center_vertical"
        android:text="@string/exchange_time"
        android:textColor="@color/text_color_little_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/store_order_exchange_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/store_order_exchange_date_title"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/store_order_exchange_date_title"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_little_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/store_order_exchange_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/store_order_exchange_date"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/store_order_exchange_date"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_little_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/store_order_pay_way_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/store_order_exchange_date_title"
        android:layout_marginLeft="72dp"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:text="@string/pay_way"
        android:textColor="@color/text_color_little_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/store_order_pay_way"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/store_order_pay_way_title"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="11dp"
        android:layout_toRightOf="@id/store_order_pay_way_title"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textColor="@color/text_color_little_black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/store_status"
        android:layout_width="51dp"
        android:layout_height="18dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:layout_marginTop="13dp"
        android:gravity="center"
        android:textColor="@color/text_color_white"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/store_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/store_status"
        android:layout_marginTop="44dp"
        android:gravity="right"
        android:textColor="@color/text_color_light_black"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>