<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/image_area"
            android:layout_width="317dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/unselected_tab_color">

            <TextView
                android:id="@+id/image_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/default_icon"
                android:text="@string/click_to_load"
                android:textColor="@color/text_color_white"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/logo_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <TextView
                android:id="@+id/upload_again"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="210dp"
                android:background="#1f2427"
                android:gravity="center"
                android:text="点击图片区域,可重新上传图片"
                android:textColor="@color/bg_while"
                android:textSize="12sp"
                android:visibility="gone" />

        </FrameLayout>
    </LinearLayout>
</ScrollView>