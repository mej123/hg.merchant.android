<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_while"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@color/bg_while"
                android:gravity="center_horizontal">


                <ImageView
                    android:id="@+id/iv_deposit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/deposit_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/iv_deposit"
                    android:text="@string/withdraw_money_count"
                    android:textColor="#7f8a95"
                    android:textSize="14sp" />
            </RelativeLayout>


            <TextView
                android:id="@+id/tv_withdraw_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/bg_while"
                android:gravity="center_horizontal"
                android:paddingBottom="31dp"
                android:paddingTop="18dp"
                android:textColor="#1f2427"
                android:textSize="30sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:background="@color/bg_while"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_commit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/iv_commit"
                        android:background="#e3e9ed" />


                    <TextView
                        android:id="@+id/tv_commit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_commit"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:text="@string/commit_success" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_audit"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/iv_audit"
                        android:background="#e3e9ed" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/iv_audit"
                        android:background="#e3e9ed" />

                    <TextView
                        android:id="@+id/tv_audit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_audit"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:text="@string/audit_success" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_remittanced"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerHorizontal="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@+id/iv_remittanced"
                        android:background="#e3e9ed" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/iv_remittanced"
                        android:background="#e3e9ed" />

                    <TextView
                        android:id="@+id/tv_remittanced"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_remittanced"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:text="@string/remittance" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/iv_remittance"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="9dp"
                        android:layout_marginTop="10dp"
                        android:layout_toLeftOf="@+id/iv_remittance"
                        android:background="#e3e9ed" />

                    <TextView
                        android:id="@+id/tv_remittance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/iv_remittance"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="11dp"
                        android:text="@string/remittance_success" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_marginTop="11dp"
            android:background="@color/bg_while">

            <TextView
                android:id="@+id/tv_withdraw_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/withdrawable"
                android:textColor="#7f8a95"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/withdraw_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/tv_withdraw_time"
                android:textColor="#1f2427"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pay_time"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/commit_audit"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/pay_time"
                android:textColor="#7f8a95"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/tv_pay_time"
                android:textColor="#1f2427"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_withdraw_bank_layout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/bg_while">

            <TextView
                android:id="@+id/tv_withdraw_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/withdrawable_bank"
                android:textColor="#7f8a95"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/withdraw_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/tv_withdraw_bank"
                android:textColor="#1f2427"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_flow"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/commit_audit">

            <TextView
                android:id="@+id/tv_flow_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/flow_id"
                android:textColor="#7f8a95"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/flow_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/tv_flow_id"
                android:textColor="#1f2427"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_remark"
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="11dp"
            android:background="@color/bg_while"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:text="@string/remark"
                android:textColor="#7f8a95"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/remark_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_toRightOf="@+id/tv_remark"
                android:textColor="#1f2427"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>