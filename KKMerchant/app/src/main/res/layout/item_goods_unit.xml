<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:id="@+id/item_goods_unit">

    <TextView
        android:id="@+id/goods_unit_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_light_black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/goods_unit_check_icon"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:paddingRight="14dp"
        android:scaleType="center"
        android:src="@mipmap/unchecked_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/app_divder_color" />
</RelativeLayout>

