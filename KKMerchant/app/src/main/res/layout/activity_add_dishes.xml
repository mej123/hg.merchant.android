<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg_color">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/bg_while"
            android:paddingLeft="14dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/dishes_name"
                android:textColor="@color/text_color_medium_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/dishes_name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/store_phone_icon"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请设置菜品"
                android:paddingRight="14dp"
                android:textColor="@color/text_color_light_add_black"
                android:textColorHint="@color/text_color_gray"
                android:textSize="15sp" />

            <View
                style="@style/line"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/bg_while"
            android:paddingLeft="14dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/menu_price"
                android:textColor="@color/text_color_medium_gray"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/menu_price_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/store_phone_icon"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请设置金额"
                android:inputType="number|numberDecimal"
                android:paddingRight="14dp"
                android:textColor="@color/text_color_light_add_black"
                android:textColorHint="@color/text_color_gray"
                android:textSize="15sp" />

            <View
                style="@style/line"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/bg_color_white"
            android:paddingLeft="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/number"
                android:textColor="@color/text_color_medium_gray"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/plus_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:paddingRight="14dp"
                android:src="@mipmap/plus_icon" />

            <TextView
                android:id="@+id/dish_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/plus_icon"
                android:textColor="@color/color02"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/reduce_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/dish_num"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:src="@mipmap/reduce_icon" />


            <View
                style="@style/line"
                android:layout_alignParentBottom="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:background="@color/bg_while"
            android:paddingLeft="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/total"
                android:textColor="@color/text_color_medium_gray"
                android:textSize="15sp" />


            <TextView
                android:id="@+id/total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                android:text="0.00"
                android:textColor="@color/text_color_gray" />


        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/add_dish_confirm"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_blue_shape_3"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/text_color_white"
        android:textSize="16sp" />

</RelativeLayout>