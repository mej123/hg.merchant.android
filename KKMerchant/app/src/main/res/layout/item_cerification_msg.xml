<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cerfication_msg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="14dp">

    <TextView
        android:id="@+id/msg_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="9-28"
        android:textColor="@color/text_color_light_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@id/msg_date"
        android:text="10:20"
        android:textColor="@color/text_color_light_black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_date"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="13dp"
        android:maxLines="1"
        android:text="杰斯参加哦；聊什么那么开心，废话一句不讲"
        android:textColor="@color/text_color_light_coffee"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/app_divder_color" />
</RelativeLayout>