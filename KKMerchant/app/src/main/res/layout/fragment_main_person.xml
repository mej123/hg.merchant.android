<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_hui"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/store_info_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/top_actionbar_bg_color">

        <ImageView
            android:id="@+id/personal_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/avatar_placeholder_icon" />


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/personal_avatar">

            <TextView
                android:id="@+id/my_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/personal_store_icon"
                android:drawablePadding="6dp"
                android:text="@string/my_house"
                android:textColor="@color/text_color_white"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/store_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/store_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/role_name"
                    android:layout_width="43dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="9dp"
                    android:background="@drawable/personal_store_shape"
                    android:gravity="center"
                    android:textColor="@color/text_color_white"
                    android:textSize="12sp" />

            </LinearLayout>


        </FrameLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/person_arrow_right_into_icon" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_account_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color_white">


        <ImageView
            android:id="@+id/iv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@mipmap/person_account_icon" />


        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_account"
            android:text="@string/current_account"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/person_arrow_right" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_account"
            android:background="@color/app_divder_color" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_contact_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color_white">


        <ImageView
            android:id="@+id/iv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.5dp"
            android:src="@mipmap/contact_us_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9.5dp"
            android:layout_toRightOf="@+id/iv_contact"
            android:text="@string/contact_us"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/person_arrow_right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/iv_contact"
            android:background="@color/app_divder_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_feedback_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:background="@color/bg_color_white">


        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/feedback_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.5dp"
            android:layout_toRightOf="@+id/iv_feedback"
            android:text="@string/suggest_feedback"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/person_arrow_right" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_about_layout"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginTop="10dp"
        android:background="@color/bg_color_white">


        <ImageView
            android:id="@+id/iv_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/aboutus_icon" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.5dp"
            android:layout_toRightOf="@+id/iv_about"
            android:text="@string/about_us"
            android:textColor="@color/text_color_light_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="15dp"
            android:src="@mipmap/person_arrow_right" />


    </RelativeLayout>


</LinearLayout>




