<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="14dp"
    android:id="@+id/item_table_dish">

    <TextView
        android:id="@+id/table_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="金牌叉烧"

        android:textColor="@color/text_color_light_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/table_dish_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="1"
        android:textColor="@color/text_color_light_black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/table_dish_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="14dp"
        android:text="¥70"
        android:layout_centerVertical="true"
        android:textColor="@color/text_color_light_black"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/app_divder_color" />


</RelativeLayout>