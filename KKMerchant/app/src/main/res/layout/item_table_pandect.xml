<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_table_pandect"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_color"
    android:orientation="vertical">


    <TextView
        android:id="@+id/table_pandect_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="14dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_color_light_black"
        android:textSize="15sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_color_white"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/order_tag"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/green_circle_icon" />


            <TextView
                android:id="@+id/tv_table_pandect_state"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="end"
                android:background="@drawable/table_pandect_shape_green"
                android:gravity="center"
                android:textColor="@color/text_color_white"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/table_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:layout_toLeftOf="@id/tv_table_pandect_state"
                android:layout_toRightOf="@id/order_tag"
                android:ellipsize="end"
                android:textColor="@color/text_color_light_black"
                android:textSize="15sp" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/pandect_time_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="用餐时间:"
                android:textColor="@color/text_color_little_black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/order_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textColor="@color/text_color_little_black"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pandect_amount_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/order_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="消费金额:"
                android:textColor="@color/text_color_little_black"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/order_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/text_color_little_black"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>