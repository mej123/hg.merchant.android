<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:text="@string/store_image"
            android:textColor="@color/text_color_light_black"
            android:textSize="14sp" />

        <FrameLayout
            android:id="@+id/image_area"
            android:layout_width="317dp"
            android:layout_height="240dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/unselected_tab_color">


            <TextView
                android:id="@+id/image_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/default_icon"
                android:text="@string/click_to_load"
                android:textColor="@color/text_color_white"
                android:textSize="12sp" />


            <ImageView
                android:id="@+id/goods_icon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:visibility="visible" />

            <TextView
                android:id="@+id/upload_again"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="210dp"
                android:background="#1f2427"
                android:gravity="center"
                android:text="点击图片区域,可重新上传图片"
                android:textColor="@color/bg_while"
                android:textSize="12sp"
                android:visibility="gone"
                 />

        </FrameLayout>

        <TextView
            android:id="@+id/tv_image_icon_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:paddingLeft="14dp"
            android:text="@string/image_name"
            android:textColor="@color/text_color_light_black"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/image_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/edit_text_bg"
            android:hint="@string/input_name_hint"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/text_color_light_black"
            android:textColorHint="@color/text_color_gray"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/return_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/text_color_light_black"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="12dp"
            android:background="@color/app_divder_color" />
    </LinearLayout>
</ScrollView>